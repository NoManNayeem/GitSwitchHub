{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GitSwitchHub",
  "version": "0.1.0",
  "identifier": "com.gitswitchhub.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GitSwitchHub",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "shell": {
      "all": false,
      "scope": [
        {
          "name": "git",
          "cmd": "git",
          "args": ["config", "--global", "credential.helper"]
        },
        {
          "name": "git-setup",
          "cmd": "git",
          "args": ["config", "--global", "credential.helper", "!<path>", "credential-helper"]
        }
      ]
    }
  }
}
